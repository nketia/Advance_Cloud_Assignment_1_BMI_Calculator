<div class="container">

<h1 class="display-5"> Cloud Computing Assignment 1 </h1>

<p></p>


<div class="row">
	
		<div class="row justify-content-center align-items-center">
			<form method="post" action="/Assignment11/calculateBMI_805">
				<legend>Calculating Body mass Index (BMI)</legend>
				<p></p>
					<div class="form-group">
						<label for="iDWeight">Enter Weight (kg):</label>
						<input type="number" class="form-control" name="weight"  id="iDWeight"  max="800" min="1">
					</div>
					<div class="form-group">
					    <label for="iDHeight">Enter Height (m):</label>
					    <input type="number" class="form-control" name="inputheight" id="iDHeight"  max="3" min="0.5">
					</div>
					  	<button type="submit" class="btn btn-primary">Get BMI</button>	
			</form>
			
		</div>

		
</div>	
<p></p>
<div>
		<% if (typeof bmi != 'undefined' && bmi) { %>
			    <h2>Your BMI is <%= bmi %></h2>
			<% } %>
		</div>
</div>

